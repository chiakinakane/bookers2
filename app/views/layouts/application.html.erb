  <!DOCTYPE html>
  
  
  <html>
    <head>
      <title>Bookers2</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <script src=“https://kit.fontawesome.com/ee5eb882ef.js” crossorigin=“anonymous”></script>
    </head>
    
  
  <body class="d-flex flex-column vh-100">
      
    <header>
      <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                    <%= link_to user_path(current_user.id), class: "nav-link text-light" do  %>
                      <i class="fas fa-home"></i>Home
                    <% end %>
                    <%= link_to users_path, class: "nav-link text-light" do  %>
                      <i class="fas fa-users"></i>Users
                    <% end %>
                    <%= link_to books_path, class: "nav-link text-light" do  %>
                      <i class="fas fa-book-open"></i>Books
                    <% end %>
                    <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
                      <i class="fas fa-sign-out-alt"></i>Log out
                    <% end %>
                </ul>
              </div>
        </div>
      </nav>
        <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style="">
            <ul class="navbar-nav ml-auto">
                    <%= link_to root_path, class: "nav-link text-light"  do %>
                  <i class="fas fa-home"></i>Home
                    <% end %>
                    <%= link_to about_path, class: "nav-link text-light" do %>
                  <i class="fas fa-link"></i>About
                    <% end %>
                    <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fas fa-user-plus"></i>Sign up
                    <% end %>
                    <%= link_to user_session_path, class: "nav-link text-light" do %>
                  <i class="fas fa-sign-in-alt"></i>Log in
                    <% end %>
            </ul>
          </div>
        </div>
      </nav>
      
      <% end %>
    </header>
    <main>
      <div class="text-black">
        <%= flash[:notice] %>
      </div>
        <%= yield %>
    </main>
    </body>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </html>