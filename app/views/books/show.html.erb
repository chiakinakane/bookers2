<div class="container">
 <div class="row">
  <div class="col-md-3">
<%= render 'users/list', user: @user ,book: @new_book %><%#部分テンプレートを呼び出し%>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
 <table class="table">
  <tbody>
   <tr>
   <td> 
    <%= link_to user_path(@user.id) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %><br>
    <%= @book.user.name %>
    <% end %>
   </td>
    <td><%= link_to @book.title,book_path(@book.id)  %></td>
    <td><%= @book.body %></td>
    <% if @user == current_user %>
    <td>
     <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
    </td>
    <td>
     <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-danger"%>
    </td>
    <% end %>
   </tr>
  </tbody>
 </table>
 </div>
 </div>
 </div>
